# ========================================
# StreamGuard Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env files with real credentials to Git!

# ----------------------------------------
# Confluent Cloud - Core Credentials (REQUIRED)
# ----------------------------------------
CONFLUENT_CLOUD_API_KEY="<your_confluent_cloud_api_key>"
CONFLUENT_CLOUD_API_SECRET="<your_confluent_cloud_api_secret>"

# Confluent Organization & Environment IDs (Find these in Confluent Cloud Console)
CONFLUENT_ORGANIZATION_ID="<your_organization_id>"
CONFLUENT_ORG_ID="<your_organization_id>"  # Alias for above
CONFLUENT_ENVIRONMENT_ID="<your_env_id>"
CONFLUENT_KAFKA_CLUSTER_ID="<your_cluster_id>"

# ----------------------------------------
# Kafka Cluster Connection (REQUIRED)
# ----------------------------------------
CONFLUENT_KAFKA_BOOTSTRAP_ENDPOINT="<your_kafka_bootstrap_endpoint>"  # e.g., pkc-xxxxx.us-east1.gcp.confluent.cloud:9092
KAFKA_REST_ENDPOINT="<your_kafka_rest_endpoint>"  # e.g., https://pkc-xxxxx.us-east1.gcp.confluent.cloud:443
CONFLUENT_CLUSTER_API_KEY="<your_cluster_api_key>"
CONFLUENT_CLUSTER_API_SECRET="<your_cluster_api_secret>"

# ----------------------------------------
# Schema Registry Connection (REQUIRED)
# ----------------------------------------
CONFLUENT_SCHEMA_REGISTRY_URL="<your_schema_registry_url>"  # e.g., https://psrc-xxxxx.us-east1.gcp.confluent.cloud
CONFLUENT_SCHEMA_REGISTRY_ID="<your_schema_registry_id>"  # e.g., lsrc-xxxxx
CONFLUENT_SCHEMA_REGISTRY_API_KEY="<your_schema_registry_api_key>"
CONFLUENT_SCHEMA_REGISTRY_API_SECRET="<your_schema_registry_api_secret>"

# ----------------------------------------
# Confluent Flink (REQUIRED for real-time processing)
# ----------------------------------------
CONFLUENT_FLINK_REST_ENDPOINT="<your_flink_rest_endpoint>"  # e.g., https://flink.us-east1.gcp.confluent.cloud
FLINK_REST_ENDPOINT="<your_flink_rest_endpoint>"  # Alias for above
CONFLUENT_FLINK_API_KEY="<your_flink_api_key>"
CONFLUENT_FLINK_API_SECRET="<your_flink_api_secret>"

# ----------------------------------------
# Google Cloud Platform (REQUIRED)
# ----------------------------------------
GCP_PROJECT_ID="<your_gcp_project_id>"
GCP_REGION="us-east1"  # Default region for Vertex AI and BigQuery
GOOGLE_APPLICATION_CREDENTIALS="<path_to_your_service_account_json_file>"  # e.g., /path/to/service-account-key.json
GCP_SERVICE_ACCOUNT_KEY="<path_to_your_service_account_json_file>"  # Alias for above (used by some scripts)
BIGQUERY_DATASET="streamguard_threats"  # Default BigQuery dataset name
GOOGLE_GENAI_USE_VERTEXAI="true"  # Use Vertex AI for Google Generative AI

# ----------------------------------------
# Terraform Variables (Optional)
# ----------------------------------------
# For Terraform (alternatively, use TF_VAR_ prefix)
TF_VAR_gcp_project_id="<your_gcp_project_id>"
TF_VAR_gcp_region="us-east1"
TF_VAR_google_service_account_key="<json_key_content_minified>"

# ----------------------------------------
# Datadog (Optional - for monitoring)
# ----------------------------------------
DATADOG_API_KEY="<your_datadog_api_key>"
DATADOG_APP_KEY_ID="<your_datadog_app_key_id>"
DATADOG_APP_KEY="<your_datadog_app_key>"

# ----------------------------------------
# Optional: Demo & Development
# ----------------------------------------
# Uncomment if using local development features
# STREAMLIT_SERVER_PORT=8501
# DEBUG_MODE=false
