# ========================================
# StreamGuard Streamlit Secrets
# ========================================
# Copy this file to secrets.toml and fill in your actual credentials
# NEVER commit secrets.toml to Git!
#
# This file is ONLY needed if you're running the Streamlit demo (demo/app.py)
# For command-line scripts, use .env file instead

# ----------------------------------------
# GCP Configuration (REQUIRED for real AI)
# ----------------------------------------
GCP_PROJECT_ID = "<your_gcp_project_id>"
GCP_REGION = "us-east1"
BIGQUERY_DATASET = "streamguard_threats"

# ----------------------------------------
# Confluent Cloud (REQUIRED)
# ----------------------------------------
CONFLUENT_KAFKA_BOOTSTRAP_ENDPOINT = "<your_kafka_bootstrap_endpoint>"  # e.g., pkc-xxxxx.us-east1.gcp.confluent.cloud:9092
CONFLUENT_CLUSTER_API_KEY = "<your_cluster_api_key>"
CONFLUENT_CLUSTER_API_SECRET = "<your_cluster_api_secret>"

CONFLUENT_SCHEMA_REGISTRY_URL = "<your_schema_registry_url>"  # e.g., https://psrc-xxxxx.us-east1.gcp.confluent.cloud
CONFLUENT_SCHEMA_REGISTRY_API_KEY = "<your_schema_registry_api_key>"
CONFLUENT_SCHEMA_REGISTRY_API_SECRET = "<your_schema_registry_api_secret>"

CONFLUENT_FLINK_REST_ENDPOINT = "<your_flink_rest_endpoint>"  # e.g., https://flink.us-east1.gcp.confluent.cloud
CONFLUENT_FLINK_API_KEY = "<your_flink_api_key>"
CONFLUENT_FLINK_API_SECRET = "<your_flink_api_secret>"

CONFLUENT_CLOUD_API_KEY = "<your_confluent_cloud_api_key>"
CONFLUENT_CLOUD_API_SECRET = "<your_confluent_cloud_api_secret>"

CONFLUENT_ENVIRONMENT_ID = "<your_env_id>"
CONFLUENT_KAFKA_CLUSTER_ID = "<your_cluster_id>"
CONFLUENT_ORGANIZATION_ID = "<your_organization_id>"

# ----------------------------------------
# GCP Service Account (REQUIRED for real AI)
# ----------------------------------------
# Copy the ENTIRE contents of your GCP service account JSON file here
# This section provides the credentials for Vertex AI and BigQuery access
[gcp_service_account]
type = "service_account"
project_id = "<your_gcp_project_id>"
private_key_id = "<your_private_key_id>"
private_key = """-----BEGIN PRIVATE KEY-----
<paste_your_multi_line_private_key_here>
-----END PRIVATE KEY-----"""
client_email = "<your_service_account_email>@<project_id>.iam.gserviceaccount.com"
client_id = "<your_client_id>"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/<service_account_email_url_encoded>"
universe_domain = "googleapis.com"

# ----------------------------------------
# NOTES
# ----------------------------------------
# 1. If this file is missing or incomplete, the Streamlit demo will:
#    - Fall back to SIMULATION MODE (no real AI, canned responses)
#    - Display a warning banner at the top
#    - Still work, but won't use real Vertex AI agents
#
# 2. To get your GCP service account JSON:
#    - Go to GCP Console > IAM & Admin > Service Accounts
#    - Create or select a service account with these roles:
#      * Vertex AI User
#      * BigQuery Data Editor
#      * BigQuery Job User
#    - Click "Keys" > "Add Key" > "Create new key" > JSON
#    - Copy the entire JSON content into the [gcp_service_account] section above
#
# 3. For command-line scripts (not Streamlit), use .env file instead
